<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp13.NewPage2"
             Title="NewPage2">
    <VerticalStackLayout HorizontalOptions="Center">
        <Label 
            Text="Kalkulator"
            FontAttributes="Bold"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid RowDefinitions="100,100" ColumnDefinitions="100,100" ColumnSpacing="10" RowSpacing="10" >
            <Label Text="Rachunek:" Grid.Column="0" BackgroundColor="Red"/>
            <Entry TextColor="Black" Placeholder="Rachunek" Grid.Column="1" BackgroundColor="Yellow"/>
            <Slider Minimum="0" Maximum="100" Grid.Row="1" Grid.Column="0" BackgroundColor="Green"/>
            <Label Text="Row1 Col1" Grid.Row="1" Grid.Column="1" BackgroundColor="Blue"/>


        </Grid>
    </VerticalStackLayout>
</ContentPage>